#:kivy 1.10.0

RelativeLayout:
	canvas.before:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'img/img1_blur.jpg'
	ResetButton:
		pos_hint: {'center_x': 0.25, 'center_y': 0.8}
		size_hint: .15, .1
		background_normal: 'img/alpha.png'
		Image:
			source: 'img/reset.png'
			size: self.parent.width, self.parent.height
			center: self.parent.center_x, self.parent.center_y
	PlayButton:
		pos_hint: {'center_x': 0.5, 'center_y': 0.8}
		size_hint: .15, .1
		background_normal: 'img/alpha.png'
		Image:
			id: play_pause
			source: 'img/play.png'
			size: self.parent.width, self.parent.height
			center: self.parent.center_x, self.parent.center_y
	ChangeButton:
		pos_hint: {'center_x': 0.75, 'center_y': 0.8}
		size_hint: .15, .1
		background_normal: 'img/alpha.png'
		Image:
			source: 'img/change.png'
			size: self.parent.width, self.parent.height
			center: self.parent.center_x, self.parent.center_y
	Label:
		id: time
		text: '00:00:00'
		font_size: sp(18)
		font_name: 'content/Raleway-Medium.ttf'
		pos_hint: {'center_x': 0.5, 'center_y': 0.68}
	ProgressBar:
		id: timer_progress
		pos_hint: {'center_x': 0.5, 'center_y': 0.65}
		size_hint: .7, None
		max: 100
		value: 0
	Button:
		pos_hint: {'center_x': 0.15, 'center_y': 0.2}
		size_hint: .15, .1
		background_normal: 'img/alpha.png'
		Image:
			source: 'img/settings.png'
			size: self.parent.width, self.parent.height
			center: self.parent.center_x,  self.parent.center_y
	Spinner:
		id: reminder_spinner
		background_normal: 'img/alpha.png'
		text: 'Remind every.. [Off]'
		values: ['30 seconds', '1 minute', '2.5 minutes', '5 minutes', '10 minutes', '15 minutes']
		size_hint: .5, .07
		pos_hint: {'center_x': 0.55, 'center_y': 0.2}
		
			
